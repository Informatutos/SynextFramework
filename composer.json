{
    "name": "informatutos/synext-framework",
    "type": "library",
    "description": "The Synext Framework Core Code",
    "keywords": [
        "informatutos",
        "synext-framework"
    ],
    "homepage": "https://github.com/Informatutos/synext-framework",
    "license": "MIT",
    "authors": [{
        "name": "Ambroise Hound",
        "email": "ambroise@informatutos.com",
        "homepage": "https://ambroise.informatutos.com",
        "role": "Developer"
    }],
    "require": {
        "php": "~7.4",
        "swiftmailer/swiftmailer": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Synext\\": "src/Synext/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "synexTest\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true
    }
}
